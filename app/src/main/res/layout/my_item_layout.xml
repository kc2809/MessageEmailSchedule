<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/abc">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:src="@drawable/bg"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tvTime"
            android:text="XINC HAO"
            android:paddingLeft="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:textColor="#ffffffff"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:textSize="17dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="New Text"
                android:id="@+id/tvToObj"
                android:paddingLeft="20dp"
                android:gravity="left|center"

                android:textSize="20sp"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_below="@+id/tvTime"
                android:layout_toRightOf="@+id/ivIcon"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_marginTop="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="New Text"
                android:id="@+id/tvContent"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:gravity="left|center"
                android:textStyle="italic"
                android:layout_below="@+id/tvToObj"
                android:layout_toRightOf="@+id/ivIcon"
                android:layout_toEndOf="@+id/ivIcon"
                android:layout_marginTop="10dp" />



    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivIcon"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_alignTop="@+id/tvToObj"
        android:layout_alignLeft="@+id/tvTime"
        android:layout_alignStart="@+id/tvTime" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgBtnDelete"
        android:src="@drawable/st2"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>